<h3 class="text-center" style="border: 1px solid black; width: 15%; margin: auto; margin-bottom: 5px; color: white; background-color: rgb(83, 83, 83);">Emails</h3>

<%= form_tag(email_index_path, method: "post", remote: true)  do %>
  <div class="text-center">
    <%= submit_tag("Recevoir un email", class: "btn btn-start-order", remote: true) %>
  </div>
<% end %>

<div class="container" style="border: 1px solid black; padding-top: 10px;">
  <div class="row">
    <div class="col text-center" id="object">
      <h4 class="text-center">Liste des emails</h4><hr>
      <% @email.each do |emails| %>
      <%= link_to emails.object, email_path(emails.id), id: "object", remote: true %><hr>
      <% end %>
    </div>  
    <div class="col text-center" id="body">
      <h4 class="text-center">Email sélectionné</h4><hr>
      <% @email.each do |emails| %>
      <%= truncate(emails.body, :length => 50) %><hr>
      <% end %>
    </div>
  </div>
</div>